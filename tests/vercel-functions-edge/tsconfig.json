{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "api",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "module": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules", "dist", ".vercel"],
  "include": ["api", "global.d.ts"]
}
