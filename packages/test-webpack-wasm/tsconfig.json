{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "emitDeclarationOnly": false,
    "stripInternal": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "declarationDir": "dist",
    "rootDir": "src"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
